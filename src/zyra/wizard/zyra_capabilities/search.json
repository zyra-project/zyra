    "groups": [
      {
        "title": "options",
        "options": [
          "--help",
          "--url",
          "--query",
          "--limit",
          "--json",
          "--csv",
          "--table",
          "--verbose",
          "--param",
          "--header",
          "--timeout",
          "--retries",
          "--concurrency",
          "--no-openapi",
          "--endpoint",
          "--qp",
          "--result-key",
          "--post",
          "--json-param",
          "--json-body",
          "--credential",
          "--credential-file",
          "--auth",
